        {
          "src": "/icons/shortcut-driver.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.africanmarket.app",
      "id": "com.africanmarket.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/africanmarket/id123456789",
      "id": "123456789"
    }
  ],
  "prefer_related_applications": false,
  "lang": "en-US",
  "scope": "/",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+africanmarket",
      "url": "/?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  }
}
