        {
          "src": "/icons/shortcut-shop.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Book Ride",
      "short_name": "Ride",
      "description": "Book a ride with African drivers",
      "url": "/rideshare",
      "icons": [
        {
          "src": "/icons/shortcut-ride.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Orders",
      "short_name": "Orders",
      "description": "View your order history",
      "url": "/orders",
      "icons": [
        {
          "src": "/icons/shortcut-orders.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Driver Dashboard",
      "short_name": "Drive",
      "description": "Access driver features",
      "url": "/driver/dashboard",
